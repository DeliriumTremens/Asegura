<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeRed"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lorant.mobile.android.ui.view.Menu" >

    <ImageView android:id="@+id/imageViewLogo"
               android:layout_width="280dp"
               android:layout_height="110dp"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="17dp"
               android:contentDescription="@string/none"
               android:src="@drawable/menu_brand_white" />

    <ImageView android:id="@+id/imageViewLogoBack"
               android:layout_width="200dp"
               android:layout_height="300dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:layout_marginBottom="15dp"
               android:contentDescription="@string/none"
               android:src="@drawable/common_brand_alpha_red" />

    <TableLayout android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/imageViewLogo"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="27dp" >
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="400dp"
            android:layout_height="wrap_content" >
            <ImageButton android:id="@+id/ibAssurance"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/none"
                         android:scaleType="fitCenter"
                         android:src="@drawable/menu_selector_assurance" 
                         android:onClick="onClickIbAssurance"/>
            <TextView android:layout_width="30dp"
                      android:layout_height="wrap_content"
                      android:text="@string/none"/>
            <ImageButton
                android:id="@+id/ibReport"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/none"
                android:scaleType="fitCenter"
                android:src="@drawable/menu_selector_report" 
                android:layout_gravity="center_horizontal" 
                android:onClick="onClickIbReport"/>
            
            
        </TableRow>
        
        <TableRow android:id="@+id/tableRow2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" 
                   android:layout_gravity="center_horizontal">
            <TextView android:id="@+id/TextViewAssurance"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/myAssurance"
                       android:textAppearance="?android:attr/textAppearanceSmall" 
                       android:layout_gravity="center_horizontal"
                       android:textColor="@android:color/white"/>
            <TextView android:layout_width="30dp"
                       android:layout_height="wrap_content"
                       android:text="@string/none"/>
             <TextView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/reportEvent"
                       android:textAppearance="?android:attr/textAppearanceSmall" 
                       android:layout_gravity="center_horizontal" 
                       android:textColor="@android:color/white"
                       android:singleLine="false"
                       android:maxLines="2"
                       android:lines="2"
                       android:gravity="center"/>
        </TableRow>
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <TextView android:layout_width="50dp"
                      android:layout_height="5dp"
                      android:text="@string/none"/>
        </TableRow>
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <ImageButton android:id="@+id/ibDealers"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/none"
                         android:scaleType="fitCenter"
                         android:src="@drawable/menu_selector_dealers" 
                         android:onClick="onClickIbDealers"/>
            <TextView android:layout_width="30dp"
                      android:layout_height="wrap_content"
                      android:text="@string/none" />
            <ImageButton android:id="@+id/ibCalendar"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/none"
                         android:scaleType="fitCenter"
                         android:src="@drawable/menu_selector_calendar" 
                         android:onClick="onClickIbCalendar"/>
        </TableRow>
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/searchDealers"
                      android:textAppearance="?android:attr/textAppearanceSmall" 
                      android:textColor="@android:color/white"
                      android:singleLine="false"
                      android:maxLines="2"
                      android:lines="2"
                      android:gravity="center"/>
            <TextView android:layout_width="30dp"
                      android:layout_height="wrap_content"
                      android:text="@string/none"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/myCalendar"
                      android:textAppearance="?android:attr/textAppearanceSmall" 
                      android:textColor="@android:color/white"
                      android:singleLine="false"
                      android:maxLines="2"
                      android:lines="2"
                      android:gravity="center"/>
        </TableRow>
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <TextView android:layout_width="50dp"
                      android:layout_height="5dp"
                      android:text="@string/none"/>
        </TableRow>
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <ImageButton android:id="@+id/ibNotifications"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/none"
                         android:scaleType="fitCenter"
                         android:src="@drawable/menu_selector_notifications"
                         android:onClick="onClickIbNotifications" />
            <TextView android:layout_width="30dp"
                      android:layout_height="wrap_content"
                      android:text="@string/none" />
            <ImageButton android:id="@+id/ibAbout"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/none"
                         android:scaleType="fitCenter"
                         android:src="@drawable/menu_button_about" 
                         android:onClick="onClickIbAbout"/>
        </TableRow>
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/notifications"
                      android:textAppearance="?android:attr/textAppearanceSmall" 
                      android:textColor="@android:color/white"
                      android:gravity="center"/>
            <TextView android:layout_width="30dp"
                      android:layout_height="wrap_content"
                      android:text="@string/none"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/aboutLorant"
                      android:textAppearance="?android:attr/textAppearanceSmall" 
                      android:textColor="@android:color/white"
                      android:singleLine="false"
                      android:maxLines="2"
                      android:lines="2"
                      android:gravity="center"/>
        </TableRow>
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <TextView android:layout_width="50dp"
                      android:layout_height="5dp"
                      android:text="@string/none"/>
        </TableRow>
        
        
        
        
        
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <ImageButton android:id="@+id/ibQuotation"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/none"
                         android:scaleType="fitCenter"
                         android:src="@drawable/menu_selector_quote"
                         android:onClick="onClickIbQuotation" />
            <TextView android:layout_width="30dp"
                      android:layout_height="wrap_content"
                      android:text="@string/none" />
            <ImageButton android:id="@+id/ibTips"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/none"
                         android:scaleType="fitCenter"
                         android:src="@drawable/menu_selector_tips" 
                         android:onClick="onClickIbTips"/>
        </TableRow>
        
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content" >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/quote"
                      android:textAppearance="?android:attr/textAppearanceSmall" 
                      android:textColor="@android:color/white"
                      android:gravity="center"/>
            <TextView android:layout_width="30dp"
                      android:layout_height="wrap_content"
                      android:text="@string/none"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/tips"
                      android:textAppearance="?android:attr/textAppearanceSmall" 
                      android:textColor="@android:color/white"
                      android:gravity="center"/>
        </TableRow>
        
    </TableLayout>
</RelativeLayout>