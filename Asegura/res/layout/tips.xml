            android:layout_toRightOf="@+id/ImageView05"
            android:text="@string/medical"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reEducation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rlMedical" 
        android:onClick="onClickTip"
        android:tag="education">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/themeDarkGrey" />

        <ImageView
            android:id="@+id/ImageView07"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
