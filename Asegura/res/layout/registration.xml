<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lorant.mobile.android.ui.view.Registration" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView android:id="@+id/imageViewLogoBack"
               android:layout_width="200dp"
               android:layout_height="300dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:contentDescription="@string/none"
               android:src="@drawable/common_brand_alpha_white" />

    <RelativeLayout android:id="@+id/rlName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/themeLightGrey" >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/nameLabel"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"/>

        <EditText android:id="@+id/etName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_toEndOf="@+id/tvName"
                  android:layout_toRightOf="@+id/tvName"
                  android:ems="10"
                  android:inputType="text" 
                  android:background="@android:color/transparent"
                  android:layout_marginLeft="5dp"
                  android:layout_marginStart="5dp"/>

    </RelativeLayout>

    <View android:id="@+id/vName"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/themeDarkGrey" 
          android:layout_below="@+id/rlName"/>
    
    <RelativeLayout android:id="@+id/rlLasName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/vName"
                    android:background="@color/themeLightGrey" >

        <TextView android:id="@+id/tvLastName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBottom="@+id/etLastName"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:text="@string/lastNameLabel"
                  android:textAppearance="?android:attr/textAppearanceSmall" 
                  android:layout_marginLeft="7dp"
                  android:layout_marginStart="7dp"/>
        
        <EditText android:id="@+id/etLastName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/tvLastName"
                  android:layout_toEndOf="@+id/tvLastName"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:ems="10" 
                  android:inputType="text"
                  android:background="@android:color/transparent"
                  android:layout_marginLeft="5dp"
                  android:layout_marginStart="5dp"/>
    </RelativeLayout>
    
    <View android:id="@+id/vLastName"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/themeDarkGrey" 
          android:layout_below="@+id/rlLasName"/>

    <RelativeLayout android:id="@+id/rlMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vLastName"
                    android:background="@color/themeLightGrey" >

        <TextView android:id="@+id/tvMiddleName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:text="@string/middleNameLabel"
                  android:textAppearance="?android:attr/textAppearanceSmall" 
                  android:layout_marginLeft="7dp"
                  android:layout_marginStart="7dp"/>

        <EditText android:id="@+id/etMiddleName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:layout_toRightOf="@+id/tvMiddleName"
                  android:layout_toEndOf="@+id/tvMiddleName"
                  android:ems="10"
                  android:inputType="text"
                  android:background="@android:color/transparent"
                  android:layout_marginLeft="5dp"
                  android:layout_marginStart="5dp"/>

    </RelativeLayout>

    <View android:id="@+id/vMiddleName"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/themeDarkGrey" 
          android:layout_below="@+id/rlMiddleName"/>
    
    <RelativeLayout android:id="@+id/rlMail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vMiddleName"
                    android:background="@color/themeLightGrey" >

        

        <TextView android:id="@+id/tvMail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:text="@string/mailLabel"
                  android:textAppearance="?android:attr/textAppearanceSmall" 
                  android:layout_marginLeft="7dp"
                  android:layout_marginStart="7dp"/>
        
        <EditText android:id="@+id/etMail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/tvMail"
                  android:layout_toEndOf="@+id/tvMail"
                  android:ems="10" 
                  android:inputType="text"
                  android:background="@android:color/transparent"
                  android:layout_marginLeft="5dp"
                  android:layout_marginStart="5dp"/>
        
    </RelativeLayout>

    
    <View android:id="@+id/vMail"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/themeDarkGrey" 
          android:layout_below="@+id/rlMail"/>
        
    <RelativeLayout android:id="@+id/rlPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vMail"
                    android:background="@color/themeLightGrey" >
        

        <TextView android:id="@+id/tvPhone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:text="@string/phoneLabel"
                  android:textAppearance="?android:attr/textAppearanceSmall" 
                  android:layout_marginLeft="7dp"
                  android:layout_marginStart="7dp"/>
        
        <EditText android:id="@+id/etPhone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/tvPhone"
                  android:layout_toEndOf="@+id/tvPhone"
                  android:ems="10" 
                  android:inputType="phone"
                  android:background="@android:color/transparent"
                  android:layout_marginLeft="5dp"
                  android:layout_marginStart="5dp"/>
    </RelativeLayout>

    <View android:id="@+id/vPhone"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/themeDarkGrey" 
          android:layout_below="@+id/rlPhone"/>
        
    <RelativeLayout android:id="@+id/rlPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vPhone"
                    android:background="@color/themeLightGrey" >


        <TextView android:id="@+id/tvPassword"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:text="@string/passwordLabel"
                  android:textAppearance="?android:attr/textAppearanceSmall" 
                  android:layout_marginLeft="7dp"
                  android:layout_marginStart="7dp"/>
        
        <EditText android:id="@+id/etPassword"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/tvPassword"
                  android:layout_toEndOf="@+id/tvPassword" 
                  android:ems="10" 
                  android:inputType="textPassword"
                  android:background="@android:color/transparent"
                  android:hint="@string/minPasswordLength"
                  android:layout_marginLeft="5dp"
                  android:layout_marginStart="5dp"/>
        
    </RelativeLayout>

    
    <View android:id="@+id/vPassword"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/themeDarkGrey" 
          android:layout_below="@+id/rlPassword"/>
    
    <RelativeLayout android:id="@+id/rlRepeatPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vPassword"
                    android:background="@color/themeLightGrey" >

        <TextView android:id="@+id/tvRepeatPassword"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:text="@string/repeatPasswordLabel"
                  android:textAppearance="?android:attr/textAppearanceSmall" 
                  android:layout_marginLeft="7dp"
                  android:layout_marginStart="7dp"/>
        
        <EditText android:id="@+id/etRepeatPassword"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/tvRepeatPassword"
                  android:layout_toEndOf="@+id/tvRepeatPassword"
                  android:inputType="textPassword"
                  android:ems="10" 
                  android:background="@android:color/transparent"
                  android:layout_marginLeft="5dp"
                  android:layout_marginStart="5dp"/>

    </RelativeLayout>

   <View android:id="@+id/vRepeatPassword"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/themeDarkGrey" 
          android:layout_below="@+id/rlRepeatPassword"/>
        
    <Button android:id="@+id/imgBnSaveRegistration"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:background="@drawable/common_button_red"
            android:drawableEnd="@drawable/location"
            android:drawablePadding="2dip"
            android:drawableRight="@drawable/common_icon_next"
            android:gravity="center"
            android:paddingEnd="20dip"
            android:paddingLeft="30dip"
            android:paddingRight="20dip"
            android:paddingStart="30dip"
            android:scaleType="fitXY"
            android:singleLine="true"
            android:text="@string/saveAndContinue"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" 
            android:onClick="onClickBnSaveRegistration"/>

</RelativeLayout>